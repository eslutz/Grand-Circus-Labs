@model Product
@{
    ViewData["Title"] = "Product Info";
    string price = $"{Model.Price:C}";
}

<style>
	table, th, td {
		border: 1px solid black;
		padding: 6px 50px;
		
	}
</style>

<h1>Product Info</h1>
<br />
<table>
	<tr>
		<td ><b>Name</b></td>
		<td>@Model.Name</td>
	</tr>
	<tr>
		<td><b>Category</b></td>
		<td>@Model.Category</td>
	</tr>
	<tr>
		<td><b>Description</b></td>
		<td>@Model.Description</td>
	</tr>
	<tr>
		<td><b>Price</b></td>
		<td>@price</td>
	</tr>
</table>
