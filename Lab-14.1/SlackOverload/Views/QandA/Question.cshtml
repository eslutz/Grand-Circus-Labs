@model Questions
@{
	ViewData["Title"] = "Question";
}

<h1>@ViewBag.PageName:</h1>

<form method="post" action="/QandA/SaveQuestion">
	<table style="border: 0px">
		<tr>
			<td><label name="title" title="Title" value="title">Title:</label></td>
			<td><input type="text" name="title" value="@Model?.Title" required /></td>
		</tr>
		<tr>
			<td><label name="details" title="Details" value="details">Question:</label></td>
			<td><textarea name="details" required >@Model?.Details</textarea></td>
		</tr>
		<tr>
			<td><label name="category" title="Category" value="category">Category:</label></td>
			<td><input type="text" name="category" value="@Model?.Category" required /></td>
		</tr>
		<tr>
			<td><label name="tags" title="Tags" value="tags">Tags:</label></td>
			<td><input type="text" name="tags" value="@Model?.Tags" /></td>
		</tr>
	</table>
	@if (Model?.Status == 0)
	{
		<input type="checkbox" name="status" />
		<label name="status" title="Status" value="status"> Check here if your question has been answered</label>
	}
	<input type="hidden" name="username" value="@ViewBag.username" />
	<input type="hidden" name="id" value="@Model?.id" />
	<br />
	<input type="submit" name="submit" value="Save" class="btn-outline-success" /> 
	@if (!string.IsNullOrEmpty(Model?.Title))
    {
	<input type="submit" name="submit" value="Delete" class="btn-outline-danger" />
    }
</form>